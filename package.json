{
  "name": "react-service-injector",
  "version": "1.0.0-rc.2",
  "description": "Hooks-based service injection for React",
  "main": "dist/index.js",
  "scripts": {
    "prepack": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --max-warnings 0",
    "format": "npm run lint -- --fix",
    "test": "jest"
  },
  "author": "Luca Scalzotto (https://github.com/LucaScorpion)",
  "license": "MIT",
  "keywords": [
    "dependency",
    "di",
    "hook",
    "injection",
    "injector",
    "react",
    "service"
  ],
  "homepage": "https://github.com/LucaScorpion/react-service-injector#readme",
  "bugs": {
    "url": "https://github.com/LucaScorpion/react-service-injector/issues"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
